@model IEnumerable<RealPizza.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Ordini</h2>


<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bibite.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizze.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users1.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo_Consegna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bibite.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pizze.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users1.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo_Consegna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Totale)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Ordine }, new { @class = "btn BtnMdf btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Ordine }, new { @class = "btn BtnAcq btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Ordine }, new { @class = "btn BtnDlt btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
