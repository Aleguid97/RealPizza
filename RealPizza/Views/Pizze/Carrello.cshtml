@model IEnumerable<RealPizza.Models.Pizze>

@{
    ViewBag.Title = "Carrello";
}

@if (TempData["Message"] != null)
{
    <div id="alertMessage" class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>

    <script>
        // Funzione per nascondere automaticamente l'alert dopo un certo periodo di tempo
        window.setTimeout(function () {
            $("#alertMessage").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 1000); // L'alert scomparirà dopo 3 secondi (3000 millisecondi)
    </script>
}



<h2>Carrello</h2>

@using (Html.BeginForm("Ordina", "Ordina", FormMethod.Post))
{
    <table class="table table-striped" style="margin-bottom: 200px;">
        <thead>
            <tr>
                <th>Immagine</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Tempo di Consegna</th>
                <th>Ingredienti</th>
                <th>Note</th>
                <th>Rimuovi</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal Tot = 0;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Immagine" alt="Immagine Pizza" style="width: 100px; height: 100px;" /></td>
                    <td>@item.Nome</td>
                    <td>@item.Prezzo €</td>
                    <td>@item.Tempo_Consegna min</td>
                    <td>@item.Ingredienti</td>
                    <td><input type="text" class="form-control" name="note" placeholder="Note" required></td>
                    <td>

                        @Html.ActionLink("Rimuovi", "RemoveFromCart", new { id = item.ID_Pizza }, new { @class = "button2" })
                    </td>
                </tr>

                { Tot += item.Prezzo; }
            }

            <tr>
                <td colspan="1"></td>
                <td colspan="1"></td>
                <td colspan="1"> <strong> @Tot € </strong> </td>
                <td colspan="1"></td>
                <td colspan="1"></td>
                <td colspan="1"> <input type="text" class="form-control" name="indirizzo" placeholder="Indirizzo" required> </td>
                <td colspan="1">
                    <button type="submit" class="button2">Ordina</button>
                </td>
            </tr>
        </tbody>
    </table>
}

@if (!Model.Any())
{
    <div class="alert mb-5 shadow" role="alert" style="background-color: moccasin;">
        Il carrello è vuoto al momento. Inizia ad aggiungere deliziose pizze per riempirlo!
    </div>

}